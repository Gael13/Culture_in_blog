<p id="notice"><%= notice %></p>

<%= turbo_frame_tag 'article' do %>
  <p>
    <strong>Title:</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @article.content %>
  </p>

  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path, 'data-turbo-frame': '_top' %>
<% end %>

<div id='comments'>
  <%= render @article.comments %>
</div>

<%= turbo_frame_tag 'new_comment', src: new_article_comment_path(@article), target: '_top' %>