<h1>New comment</h1>

<%= turbo_frame_tag 'new_comment', target: '_top' do %>
  <%= form_with model: [ @comment.article, @comment ] do |form| %>

    <div class="mt-4 border border-grey w-1/2 border-1 rounded relative focus:border-red">
      <%= form.text_field :content, class: "text-grey-dark p-2 font-light w-full text-sm font-medium tracking-wide", placeholder: "Type your comment..." %>
    </div>

    <p class='mt-4'>
      <%= form.submit 'Comment', class: 'px-4 py-2 rounded-md text-sm font-medium border-0 focus:outline-none focus:ring transition text-white bg-blue-500 hover:bg-blue-600 active:bg-blue-700 focus:ring-blue-300' %>
    </p>
  <% end %>
<% end %>
<%= link_to 'Back', @comment.article %>